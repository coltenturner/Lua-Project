	--setting keypress to register the keyboard
local keypress = game.Players.LocalPlayer:GetMouse()
	--running the thread that detects a key being pressed down
keypress.KeyDown:connect(function(key)
	flag = true
		--move forward
	while(key == "w" and flag == true)do
		game.Workspace.hollowOrb.Velocity = Vector3.new(0,0,-20)
		print(key)
		wait(0.0001)
	end
		--move backward
	while(key == "s" and flag == true)do
		game.Workspace.hollowOrb.Velocity = Vector3.new(0,0,20)
		print(key)
		wait(0.0001)
	end
		--move right
	while(key == "d" and flag == true)do
		game.Workspace.hollowOrb.Velocity = Vector3.new(20,0,0)
		print(key)
		wait(0.0001)
	end
		--move left
	while(key == "a" and flag == true)do
		game.Workspace.hollowOrb.Velocity = Vector3.new(-20,0,0)
		print(key)
		wait(0.0001)
	end
end)
	--running the thread that detects a key getting de-pressed
keypress.KeyUp:connect(function(key)
	if(key=="w"or key=="a"or key=="s"or key=="d")then
		print(key,"up")
		flag = false
	end
end)
